<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nút được nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#FFCCCB" /> <!-- Màu nền khi nhấn -->
        </shape>
    </item>
    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Màu nền mặc định -->
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- Viền -->
        </shape>
    </item>
</selector>